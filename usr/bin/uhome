set -e

PKG="uhome"

FILE="$HOME/.$PKG/addresses"
touch "$FILE"
STATE="$HOME/.$PKG/state"
mkdir -p $(dirname "$STATE")
TRIES=10
QUIET=0
while [ ! -z "$1" ]; do
	case "${1}" in
		-f|--file)
			FILE="$2"
			shift 2
		;;
		-q|--quiet)
			QUIET="1"
			shift 1
		;;
		-t|--tries)
			TRIES="$2"
			shift 2
		;;
		*)
			echo "Unknown options [$1]" 1>&2
			exit 1
		;;
	esac
done


is_ip() {
	echo "$1" | grep -qs "^[0-9]\{1,3\}\.[0-9]\{1,3\}\.[0-9]\{1,3\}\.[0-9]\{1,3\}$" >/dev/null 2>&1
}

test_addr() {
	local addr="$1"
	local i=0
	local ip=0
	if is_ip "$addr"; then
		ip="$addr"
	else
		echo "ERROR: Invalid address in configuration file [$addr]" 1>&2
		exit 1
	fi
	for i in $(seq 1 $TRIES); do
		ping -q -c 1 "$addr" >/dev/null 2>&1 && return
	done
	false
}

set_state() {
	local state="$1"
	case "$state" in
		0)
			[ "$QUIET" = "1" ] || echo "$PKG →  Yep!"
			echo 0 >"$STATE"
			exit 0
		;;
		1)
			[ "$QUIET" = "1" ] || echo "$PKG →  Nope!"
			echo 1 >"$STATE"
			exit 1
		;;
	esac
}

for addr in $(cat "$FILE" | grep -v "^#"); do
	test_addr "$addr" && set_state 0 || continue
done
set_state 1
